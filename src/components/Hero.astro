<header class="hero">
  <div class="hero-bg">
    <img 
      src="/FOTOS/14441d6f-595c-4ea6-819f-905c3340d8c8.jpg" 
      alt="Santiago Dora en estudio de grabación" 
      class="hero-image"
    />
    <div class="hero-overlay"></div>
  </div>
  <div class="hero-content">
    <h1 class="hero-title">Santiago Dora</h1>
    <p class="hero-subtitle">Actor de doblaje · Locución · Córdoba, Argentina</p>
    <a href="#demos" class="hero-cta">Ver demos</a>
  </div>
</header>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 55% 30%;
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(10, 10, 10, 0.3) 0%,
      rgba(10, 10, 10, 0.6) 50%,
      rgba(10, 10, 10, 0.95) 100%
    );
  }
  .hero-content {
    position: relative;
    z-index: 1;
    padding: 2rem;
    max-width: 800px;
  }
  .hero-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(4rem, 15vw, 10rem);
    font-weight: 400;
    letter-spacing: 0.05em;
    margin: 0;
    line-height: 0.95;
    text-transform: uppercase;
  }
  .hero-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: var(--color-text-muted);
    margin: 1rem 0 2rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }
  .hero-cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--color-accent);
    color: white;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: background 0.2s, transform 0.2s;
  }
  .hero-cta:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
  }
</style>
