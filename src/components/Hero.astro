---
const audios = [
  { label: "Español Neutro", file: "espanol-neutro.wav" },
  { label: "Animación", file: "animacion.wav" },
  { label: "Español Argentina", file: "espanol-argentina.wav" },
  { label: "Películas y series", file: "peliculas-y-series.wav" },
];
---
<header class="hero">
  <div class="hero-bg"></div>
  <div class="hero-overlay"></div>
  <a href="mailto:santiagodora94@gmail.com" class="hero-email">
    santiagodora94@gmail.com
  </a>
  <div class="hero-content">
    <h1 class="hero-title">Santiago Dora</h1>
    <p class="hero-subtitle">Actor de doblaje · Locutor</p>
  </div>
  <a href="#video-principal" class="hero-scroll-down" aria-label="Bajar al contenido">
    <span class="hero-scroll-down-circle">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </span>
  </a>
  <div class="hero-audios">
    {audios.map((audio) => (
      <div class="hero-audio-item">
        <div class="hero-audio-row">
          <audio controls preload="metadata" class="hero-audio">
            <source
              src={`${import.meta.env.BASE_URL}audios/${audio.file}`}
              type="audio/wav"
            />
          </audio>
          <a href={`${import.meta.env.BASE_URL}audios/${audio.file}`} download class="hero-audio-download" title="Descargar">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
          </a>
        </div>
        <span class="hero-audio-label">{audio.label}</span>
      </div>
    ))}
  </div>
</header>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-align: left;
    gap: 2rem;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
  }
  .hero-email {
    position: absolute;
    top: 1.25rem;
    right: clamp(1.25rem, 4vw, 2.5rem);
    z-index: 3;
    font-size: 0.9rem;
    color: #ffffff;
    text-decoration: none;
    opacity: 0.9;
  }
  .hero-email:hover {
    opacity: 1;
    color: var(--color-accent);
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    background-image: url('/fondo1.jpg');
    background-size: cover;
    background-position: center 35%;
    background-attachment: fixed;
  }
  /* En móviles fixed no se muestra (iOS Safari, etc.): usar scroll para que se vea la imagen */
  @media (max-width: 900px), (hover: none) {
    .hero-bg {
      background-attachment: scroll;
    }
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to bottom,
      rgba(10, 10, 10, 0.3) 0%,
      rgba(10, 10, 10, 0.6) 50%,
      rgba(10, 10, 10, 0.95) 100%
    );
  }
  .hero-content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    padding-left: clamp(2rem, 8vw, 4rem);
    max-width: 700px;
    min-width: 0;
  }
  .hero-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(3rem, 12vw, 10rem);
    font-weight: 400;
    letter-spacing: 0.05em;
    margin: 0;
    line-height: 0.95;
    text-transform: uppercase;
    animation: heroFadeUp 0.8s ease-out forwards;
    opacity: 0;
  }
  .hero-subtitle {
    font-size: clamp(0.9rem, 2.5vw, 1.25rem);
    color: var(--color-text-muted);
    margin: 1rem 0 2rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    animation: heroFadeUp 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }
  .hero-scroll-down {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    animation: heroFadeUp 0.8s ease-out 0.4s forwards, heroScrollBounce 2s ease-in-out 1.2s infinite;
    opacity: 0;
    transition: transform 0.2s;
  }
  .hero-scroll-down-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.08);
    border: 2px solid rgba(255, 255, 255, 0.25);
    color: rgba(255, 255, 255, 0.9);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
    transition: background 0.2s, border-color 0.2s, color 0.2s, box-shadow 0.2s;
  }
  .hero-scroll-down:hover .hero-scroll-down-circle {
    background: rgba(255, 255, 255, 0.14);
    border-color: rgba(255, 255, 255, 0.45);
    color: white;
    box-shadow: 0 6px 28px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  @keyframes heroScrollBounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(8px); }
  }
  .hero-audios {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    padding-right: clamp(2rem, 5vw, 3rem);
    min-width: 0;
    max-width: 100%;
  }
  .hero-audio-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.35rem;
  }
  .hero-audio-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .hero-audio {
    height: 40px;
    min-width: 260px;
    max-width: 100%;
    width: 100%;
    opacity: 0.85;
    transition: opacity 0.3s;
  }
  @media (min-width: 901px) {
    .hero-audio {
      height: 44px;
      min-width: 300px;
    }
    .hero-audio-label {
      font-size: 0.9rem;
    }
  }
  .hero-audio:hover {
    opacity: 1;
  }
  .hero-audio-download {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.85rem;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--color-text);
    text-decoration: none;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    transition: background 0.2s, border-color 0.2s, color 0.2s;
  }
  .hero-audio-download:hover {
    background: rgba(255, 255, 255, 0.14);
    border-color: rgba(255, 255, 255, 0.35);
    color: var(--color-accent);
  }
  .hero-audio-download svg {
    flex-shrink: 0;
  }
  .hero-audio-label {
    font-size: 0.85rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-text);
  }
  @media (max-width: 900px) {
    .hero-audio {
      min-width: 0;
      height: 36px;
    }
    .hero {
      flex-direction: column;
      justify-content: center;
      padding: 0 1rem;
    }
    .hero-content {
      padding: 2rem 1rem;
      padding-left: 1rem;
      max-width: 100%;
      margin-top: -0.75rem;
      margin-bottom: 2.25rem;
    }
    .hero-audios {
      padding: 1.5rem 1rem;
      width: 100%;
      max-width: calc(100vw - 2rem);
    }
    .hero-audio-row {
      width: 100%;
      max-width: 100%;
    }
    .hero-audio {
      flex: 1;
    }
  }
  @keyframes heroFadeUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
