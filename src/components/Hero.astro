---
const audios = [
  { label: "Español Neutro", file: "espanol-neutro.mp3" },
  { label: "Animación", file: "animacion.mp3" },
  { label: "Español Argentina", file: "espanol-argentina.mp3" },
  { label: "Películas y series", file: "peliculas-y-series.mp3" },
];
---
<header class="hero">
  <div class="hero-bg"></div>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1 class="hero-title">Santiago Dora</h1>
    <p class="hero-subtitle">Actor de doblaje · Locutor</p>
    <a href="#demos" class="hero-cta">Ver demos</a>
  </div>
  <div class="hero-audios">
    {audios.map((audio) => (
      <div class="hero-audio-item">
        <div class="hero-audio-row">
          <audio controls preload="metadata" class="hero-audio">
            <source
              src={`${import.meta.env.BASE_URL}audios/${audio.file}`}
              type="audio/mpeg"
            />
          </audio>
          <a href={`${import.meta.env.BASE_URL}audios/${audio.file}`} download class="hero-audio-download" title="Descargar">↓</a>
        </div>
        <span class="hero-audio-label">{audio.label}</span>
      </div>
    ))}
  </div>
</header>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-align: left;
    gap: 2rem;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    background-image: url('/fondo1.jpg');
    background-size: cover;
    background-position: center 35%;
    background-attachment: fixed;
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to bottom,
      rgba(10, 10, 10, 0.3) 0%,
      rgba(10, 10, 10, 0.6) 50%,
      rgba(10, 10, 10, 0.95) 100%
    );
  }
  .hero-content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    padding-left: clamp(2rem, 8vw, 4rem);
    max-width: 700px;
    min-width: 0;
  }
  .hero-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(3rem, 12vw, 10rem);
    font-weight: 400;
    letter-spacing: 0.05em;
    margin: 0;
    line-height: 0.95;
    text-transform: uppercase;
    animation: heroFadeUp 0.8s ease-out forwards;
    opacity: 0;
  }
  .hero-subtitle {
    font-size: clamp(0.9rem, 2.5vw, 1.25rem);
    color: var(--color-text-muted);
    margin: 1rem 0 2rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    animation: heroFadeUp 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }
  .hero-cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    animation: heroFadeUp 0.8s ease-out 0.4s forwards;
    opacity: 0;
    background: var(--color-accent);
    color: white;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: background 0.2s, transform 0.2s;
  }
  .hero-cta:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
  }
  .hero-audios {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    padding-right: clamp(2rem, 5vw, 3rem);
    min-width: 0;
    max-width: 100%;
  }
  .hero-audio-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.35rem;
  }
  .hero-audio-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .hero-audio {
    height: 40px;
    min-width: 260px;
    max-width: 100%;
    width: 100%;
    opacity: 0.85;
    transition: opacity 0.3s;
  }
  @media (min-width: 901px) {
    .hero-audio {
      height: 44px;
      min-width: 300px;
    }
    .hero-audio-label {
      font-size: 0.9rem;
    }
  }
  .hero-audio:hover {
    opacity: 1;
  }
  .hero-audio-download {
    color: var(--color-text-muted);
    font-size: 1rem;
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.3s;
  }
  .hero-audio-download:hover {
    opacity: 1;
    color: var(--color-accent);
  }
  .hero-audio-label {
    font-size: 0.85rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-text);
  }
  @media (max-width: 900px) {
    .hero-audio {
      min-width: 0;
      height: 36px;
    }
    .hero {
      flex-direction: column;
      justify-content: center;
      padding: 0 1rem;
    }
    .hero-content {
      padding: 2rem 1rem;
      padding-left: 1rem;
      max-width: 100%;
    }
    .hero-audios {
      padding: 1.5rem 1rem;
      width: 100%;
      max-width: calc(100vw - 2rem);
    }
    .hero-audio-row {
      width: 100%;
      max-width: 100%;
    }
    .hero-audio {
      flex: 1;
    }
  }
  @keyframes heroFadeUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
