---
const worksBase = import.meta.env.BASE_URL + "works/";
const highlights = [
  { role: "Rick Flag", project: "Escuadrón Suicida: Isekai", type: "Anime", image: "rick-flag.png", videoUrl: "https://youtu.be/q8pl7FF3f5Y" },
  { role: "Isami Aldini", project: "Food Wars!", type: "Anime", image: "isami-aldini.webp", videoUrl: "https://youtu.be/ViLcaS1NvNA" },
  { role: "Xuan", project: "La leyenda de la serpiente", type: "Película animada", image: "xuan.png", videoUrl: "https://youtu.be/lmQlpd6vgDA" },
  { role: "Theodore Roosevelt", project: "Elkhorn", type: "Serie TV", image: "theodore-roosevelt.png", videoUrl: "https://youtu.be/b3RQOVFs3vM" },
  { role: "Dark Jokester", project: "Los nuevos vengadores", type: "Anime", image: "dark-jokester.jpg", videoUrl: "https://youtu.be/HmWHlzlsSN4" },
  { role: "Jesse Williams", project: "Alucinaciones del pasado", type: "Película", image: "jesse-williams.png", videoUrl: "https://youtu.be/4VBJNUrX3Q4" },
  { role: "Josh Hartnett", project: "Valle de los dioses", type: "Película", image: "josh-hartnett.jpg", videoUrl: "https://youtu.be/LinVDFbV8k0" },
  { role: "Scott Mechlowicz", project: "Poder más allá de la vida", type: "Película", image: "scott-mechlowicz.png", videoUrl: "https://youtu.be/YoohRxE6qzA" },
  { role: "Takashi", project: "Detective Conan", type: "Anime", image: "takashi.png", videoUrl: "https://youtu.be/EVaFjdOezcs" },
];

function getEmbedUrl(url: string): string {
  const match = url.match(/(?:youtu\.be\/|youtube\.com\/(?:watch\?v=|embed\/))([\w-]+)/);
  return match ? `https://www.youtube.com/embed/${match[1]}` : url;
}
---
<section class="work" id="trabajos">
  <h2 class="section-title">Trabajos oficiales</h2>
  <p class="section-subtitle">Una selección de mi filmografía</p>
  <div class="work-grid">
    {highlights.map((item) => (
      <div class="work-card" data-video={item.videoUrl ? getEmbedUrl(item.videoUrl) : undefined} data-role={item.role} data-project={item.project}>
        {item.image ? (
          <img src={`${worksBase}${item.image}`} alt={item.project} class="work-card-image" width="300" height="200" loading="lazy" />
        ) : (
          <div class="work-card-placeholder" aria-hidden="true" />
        )}
        {item.videoUrl && <span class="work-card-play" aria-hidden="true">▶</span>}
        <div class="work-card-content">
          <span class="work-type">{item.type}</span>
          <h3>{item.role}</h3>
          <p>{item.project}</p>
        </div>
      </div>
    ))}
  </div>
  <div id="work-video-modal" class="work-modal" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="work-modal-title">
    <div class="work-modal-backdrop"></div>
    <div class="work-modal-box">
      <button type="button" class="work-modal-close" aria-label="Cerrar video">×</button>
      <h2 id="work-modal-title" class="work-modal-title"></h2>
      <div class="work-modal-video-wrap">
        <iframe id="work-video-iframe" title="Video del trabajo" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</section>

<script>
  function initWorkVideos() {
    const modal = document.getElementById('work-video-modal');
    const iframe = document.getElementById('work-video-iframe') as HTMLIFrameElement;
    const titleEl = document.getElementById('work-modal-title');
    const closeBtn = modal?.querySelector('.work-modal-close');
    const backdrop = modal?.querySelector('.work-modal-backdrop');

    if (!modal || !iframe || !titleEl) return;

    const openModal = (embedUrl: string, role: string, project: string) => {
      iframe.src = embedUrl + '?autoplay=1';
      titleEl.textContent = `${role} — ${project}`;
      modal.setAttribute('aria-hidden', 'false');
      modal.classList.add('is-open');
      document.body.style.overflow = 'hidden';
    };

    const closeModal = () => {
      iframe.src = '';
      modal.setAttribute('aria-hidden', 'true');
      modal.classList.remove('is-open');
      document.body.style.overflow = '';
    };

    document.querySelectorAll('.work-card[data-video]').forEach((card) => {
      card.addEventListener('click', () => {
        const url = card.getAttribute('data-video');
        const role = card.getAttribute('data-role') ?? '';
        const project = card.getAttribute('data-project') ?? '';
        if (url) openModal(url, role, project);
      });
    });

    closeBtn?.addEventListener('click', closeModal);
    backdrop?.addEventListener('click', closeModal);

    modal.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
    });
  }
  initWorkVideos();
</script>

<style>
  .work {
    padding: 6rem clamp(1rem, 4vw, 2rem);
    overflow-x: hidden;
    background: var(--color-bg-elevated);
  }
  .section-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 3rem;
    letter-spacing: 0.05em;
    text-align: center;
    margin: 0 0 0.5rem;
  }
  .section-subtitle {
    text-align: center;
    color: var(--color-text-muted);
    margin: 0 0 3rem;
  }
  .work-grid {
    display: grid;
    gap: 1.5rem;
    max-width: 1100px;
    margin: 0 auto;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  }
  .work-card {
    background: var(--color-bg);
    border-radius: 8px;
    overflow: hidden;
    border-left: 3px solid var(--color-accent);
    display: flex;
    flex-direction: column;
    cursor: pointer;
    position: relative;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .work-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }
  .work-card[data-video] .work-card-image {
    transition: opacity 0.2s ease;
  }
  .work-card[data-video]:hover .work-card-image {
    opacity: 0.85;
  }
  .work-card-play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 56px;
    height: 56px;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 1.5rem;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
  }
  .work-card[data-video]:hover .work-card-play {
    opacity: 1;
  }
  .work-card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    object-position: center 30%;
    display: block;
  }
  .work-card-placeholder {
    width: 100%;
    height: 200px;
    background: linear-gradient(135deg, rgba(255,255,255,0.06) 0%, rgba(255,255,255,0.02) 100%);
    flex-shrink: 0;
  }
  .work-card-content {
    padding: 1.25rem 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  .work-type {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent);
  }
  .work-card-content h3 {
    margin: 0.5rem 0 0.25rem;
    font-size: 1.1rem;
  }
  .work-card-content p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .work-modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease;
  }
  .work-modal.is-open {
    opacity: 1;
    visibility: visible;
  }
  .work-modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    cursor: pointer;
  }
  .work-modal-box {
    position: relative;
    width: 100%;
    max-width: 900px;
    background: var(--color-bg);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 24px 48px rgba(0, 0, 0, 0.4);
  }
  .work-modal-close {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    z-index: 2;
    width: 40px;
    height: 40px;
    border: none;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    font-size: 1.5rem;
    line-height: 1;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s ease;
  }
  .work-modal-close:hover {
    background: rgba(0, 0, 0, 0.8);
  }
  .work-modal-title {
    padding: 1rem 1.5rem 0;
    margin: 0;
    font-size: 1.25rem;
    font-family: inherit;
  }
  .work-modal-video-wrap {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
  }
  .work-modal-video-wrap iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }
</style>
