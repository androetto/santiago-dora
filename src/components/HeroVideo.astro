---
const videos = [
  { id: "UJQrKmyFcQA", title: "Demo 1" },
  { id: "smaT033vdn4", title: "Demo 2" },
];
---
<section class="hero-video" id="video-principal">
  <h2 class="hero-video-title">Destacados</h2>
  <div class="hero-video-grid">
    {videos.map((video) => (
      <div class="hero-video-wrapper">
        <iframe
          src={`https://www.youtube.com/embed/${video.id}?rel=0`}
          title={video.title}
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        />
      </div>
    ))}
  </div>
</section>

<style>
  .hero-video {
    padding: 1.5rem clamp(1rem, 3vw, 1.75rem);
    overflow-x: hidden;
    background: var(--color-bg);
  }
  .hero-video-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    letter-spacing: 0.05em;
    text-align: center;
    margin: 0 0 1.25rem;
  }
  .hero-video-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }
  .hero-video-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 150%;
    height: 0;
    overflow: hidden;
    border-radius: 8px;
    background: #111;
  }
  .hero-video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  @media (max-width: 768px) {
    .hero-video-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }
  }
</style>
