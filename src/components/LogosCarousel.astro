---
const brands = [
  { name: "NETFLIX", file: "netflix.png" },
  { name: "HBO", file: "hbo.png" },
  { name: "AMAZON PRIME", file: "amazon-prime.png" },
  { name: "HULU", file: "hulu.png" },
  { name: "BULLANGA", file: "bullanga.png" },
  { name: "DISCOVERY CHANNEL", file: "discovery-channel.png" },
  { name: "DC", file: "dc.png" },
  { name: "YOUTUBE", file: "youtube.jpg" },
  { name: "Almacén de pizzas", file: "almacen-de-pizzas.png" },
  { name: "Naisekai", file: "naisekai.png" },
  { name: "Wekeep", file: "wekeep.png" },
];
---
<section class="logos-section" id="empresas">
  <h2 class="logos-title">Confían en mi voz</h2>
  <div class="logos-carousel">
    <div class="logos-track">
      {[...brands, ...brands].map((brand) => (
        <div class="logo-item">
          <img
            src={`${import.meta.env.BASE_URL}logos/${brand.file}`}
            alt={brand.name}
            onerror="this.style.display='none';this.nextElementSibling.style.display='block'"
          />
          <span class="logo-fallback" style="display:none">{brand.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .logos-section {
    padding: 4rem 0;
    background: var(--color-bg-elevated);
    overflow: hidden;
  }
  .logos-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    letter-spacing: 0.05em;
    text-align: center;
    margin: 0 0 2rem;
  }
  .logos-carousel {
    overflow: hidden;
  }
  .logos-track {
    display: flex;
    gap: 3rem;
    animation: scroll 30s linear infinite;
    width: max-content;
  }
  .logo-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80px;
    width: 160px;
  }
  .logo-item img {
    height: 70px;
    width: 140px;
    object-fit: contain;
    opacity: 0.9;
    transition: opacity 0.3s;
  }
  .logo-item:hover img {
    opacity: 1;
  }
  .logo-fallback {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--color-text-muted);
    opacity: 0.85;
    white-space: nowrap;
    transition: color 0.3s, opacity 0.3s;
  }
  .logo-item:hover .logo-fallback {
    color: var(--color-accent);
    opacity: 1;
  }
  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>
