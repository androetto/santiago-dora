</header>

<style>
  .scroll-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 0.75rem 1.5rem;
    background: rgba(10, 10, 10, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transform: translateY(-100%);
    opacity: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
    pointer-events: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  .scroll-header.visible {
    transform: translateY(0);
    opacity: 1;
    pointer-events: auto;
  }
  .scroll-header-link {
    display: flex;
    flex-direction: column;
    gap: 0;
    text-decoration: none;
  }
  .scroll-header-name {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    letter-spacing: 0.05em;
    color: white;
    line-height: 1;
    text-transform: uppercase;
  }
  .scroll-header-subtitle {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 0.7rem;
    letter-spacing: 0.15em;
    color: var(--color-text-muted);
    text-transform: uppercase;
  }
  .scroll-header-email {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.85rem;
    color: #ffffff;
    text-decoration: none;
    opacity: 0.9;
    white-space: nowrap;
  }
  .scroll-header-email:hover {
    opacity: 1;
    color: var(--color-accent);
  }
  .scroll-header-email-icon {
    flex-shrink: 0;
  }
  .scroll-header-link:hover .scroll-header-name {
    color: var(--color-accent);
  }
</style>

<script>
  const header = document.getElementById('scroll-header');
  if (header) {
    const showAfter = window.innerHeight * 0.8;
    function onScroll() {
      if (window.scrollY > showAfter) {
        header.classList.add('visible');
      } else {
        header.classList.remove('visible');
      }
    }
    window.addEventListener('scroll', onScroll);
  }
</script>
