</footer>

<script>
  const form = document.getElementById('contact-form');
  const feedback = document.getElementById('contact-feedback');
  if (form && feedback) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = form.querySelector('button[type="submit"]');
      const originalText = btn?.textContent;
      if (btn) {
        btn.disabled = true;
        btn.textContent = 'Enviando...';
      }
      feedback.textContent = '';
      feedback.removeAttribute('class');
      try {
        const res = await fetch(form.action, {
          method: 'POST',
          body: new FormData(form),
          headers: { 'Accept': 'application/json' }
        });
        if (res.ok) {
          feedback.textContent = '¡Mensaje enviado! Te responderé pronto.';
          feedback.className = 'contact-form-feedback success';
          form.reset();
        } else {
          const data = await res.json().catch(() => ({}));
          feedback.textContent = data.error || data.message || 'Hubo un error. Probá por WhatsApp.';
          feedback.className = 'contact-form-feedback error';
        }
      } catch {
        feedback.textContent = 'Error de conexión. Probá por WhatsApp.';
        feedback.className = 'contact-form-feedback error';
      }
      if (btn) {
        btn.disabled = false;
        btn.textContent = originalText;
      }
    });
  }
</script>

<style>
  .contact {
    padding: 6rem clamp(1rem, 4vw, 2rem);
    text-align: center;
    background: var(--color-bg);
    border-top: 1px solid rgba(255,255,255,0.08);
  }
  .contact h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    letter-spacing: 0.05em;
    margin: 0 0 0.5rem;
  }
  .contact > .contact-content > p {
    color: var(--color-text-muted);
    margin: 0 0 2rem;
  }
  .contact-form {
    max-width: 480px;
    margin: 0 auto 2.5rem;
    text-align: left;
  }
  .contact-form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  @media (max-width: 500px) {
    .contact-form-grid {
      grid-template-columns: 1fr;
    }
  }
  .contact-form-field {
    margin-bottom: 1rem;
  }
  .contact-form-field label {
    display: block;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 0.35rem;
    color: var(--color-text);
  }
  .contact-form-field input,
  .contact-form-field textarea {
    width: 100%;
    padding: 0.65rem 0.9rem;
    font-family: inherit;
    font-size: 1rem;
    background: rgba(255,255,255,0.06);
    border: 1px solid rgba(255,255,255,0.15);
    border-radius: 6px;
    color: var(--color-text);
    transition: border-color 0.2s;
  }
  .contact-form-field input::placeholder,
  .contact-form-field textarea::placeholder {
    color: var(--color-text-muted);
    opacity: 0.6;
  }
  .contact-form-field input:focus,
  .contact-form-field textarea:focus {
    outline: none;
    border-color: var(--color-accent);
  }
  .contact-form-field textarea {
    resize: vertical;
    min-height: 100px;
  }
  .contact-form-submit {
    padding: 0.75rem 1.5rem;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 600;
    background: var(--color-accent);
    color: var(--color-bg);
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: opacity 0.2s, background 0.2s;
  }
  .contact-form-submit:hover:not(:disabled) {
    opacity: 0.9;
  }
  .contact-form-submit:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }
  .contact-form-feedback {
    margin-top: 1rem;
    font-size: 0.9rem;
  }
  .contact-form-feedback.success {
    color: #4ade80;
  }
  .contact-form-feedback.error {
    color: #f87171;
  }
  .contact-links {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }
  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 700;
    font-size: 1.15rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    transition: color 0.2s, transform 0.2s;
  }
  .contact-link-icon {
    flex-shrink: 0;
    display: inline-flex;
  }
  .contact-link-icon svg {
    vertical-align: middle;
  }
  .contact-link:hover {
    color: var(--color-accent-hover);
    transform: translateY(-2px);
  }
  .contact-whatsapp:hover {
    color: #25d366;
  }
  .contact-location {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    opacity: 0.7;
  }
</style>
