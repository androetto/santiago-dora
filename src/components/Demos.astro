---
const demos = [
  {
    title: "Demo",
    youtubeId: "rCqzyNfrFA8",
  },
];
---
<section class="demos" id="demos">
  <h2 class="section-title">Demos</h2>
  <p class="section-subtitle">Conoc√© el rango y versatilidad de mi voz</p>
  <div class="demos-grid">
    {demos.map((demo) => (
      <div class="demo-card">
        <div class="demo-video-wrapper">
          <iframe
            src={`https://www.youtube.com/embed/${demo.youtubeId}?rel=0`}
            title={demo.title}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          />
        </div>
        <h3>{demo.title}</h3>
      </div>
    ))}
  </div>
</section>

<style>
  .demos {
    padding: 6rem 2rem;
  }
  .section-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 3rem;
    letter-spacing: 0.05em;
    text-align: center;
    margin: 0 0 0.5rem;
  }
  .section-subtitle {
    text-align: center;
    color: var(--color-text-muted);
    margin: 0 0 3rem;
  }
  .demos-grid {
    display: grid;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  @media (min-width: 600px) {
    .demos-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 900px) {
    .demos-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  .demo-card {
    background: var(--color-bg-elevated);
    border-radius: 8px;
    overflow: hidden;
  }
  .demo-video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    overflow: hidden;
  }
  .demo-video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .demo-card h3 {
    padding: 1rem 1.5rem;
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
  }
</style>
